<div class="container">
    {{#each users}}
    <div class="item">
        <h2>{{this.name}}</h2>
        <p>{{this.occupation}}</p>
        <div class="actions">
            <a href="/users/{{this.id}}" class="details-bnt">Ver detalhes</a>
            <a href="/users/edit/{{this.id}}" class="edit-bnt">Editar</a>
        </div>
        <form action="/users/delete/{{this.id}}" method="POST">
            <input type="submit" value="Excluir" class="botao-delete">
        </form>
    </div>
    {{/each}}
</div>