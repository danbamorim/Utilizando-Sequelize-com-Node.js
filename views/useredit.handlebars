<h1> Editando o Usuário: {{user.name}}</h1>

<form action="/users/update" method="POST" class="form">
    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
        <label for="name">Nome : </label>
        <input type="text" name="name" placeholder="Digite o nome do usuario: " value="{{user.name}}">
    </div>

    <div class="form-control">
        <label for="occupation">Ocupação : </label>
        <input type="text" name="occupation" placeholder="Digite a sua ocupação:" value="{{user.occupation}}">
    </div>


    <div class="form-control">
        <input type="checkbox" name="newsletter">
        <label for="newsletter">Enviar Promoções?</label>
        <input type="submit" name="envia" value="Editar ">
    </div>
</form>
